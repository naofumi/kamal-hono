    "hono": "^4.6.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.11.17",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.30.1",
